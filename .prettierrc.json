{
  "plugins": [
    "prettier-plugin-svelte",
    "prettier-plugin-tailwindcss",
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }],

  "importOrderTypeScriptVersion": "5.5.4",
  "importOrder": [
    "<TYPES>^[.]",
    "<TYPES>",
    "",
    "^svelte$",
    "^svelte/",
    "^@sveltejs/",
    "",
    "<BUILTIN_MODULES>",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^[.$]"
  ],

  "printWidth": 100
}
